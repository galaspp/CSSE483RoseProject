<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_centerInParent="true"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dp"
        android:layout_gravity="center">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp"
                        android:background="@color/white"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/task_title_text_view"
                            android:layout_height="wrap_content"
                            android:layout_width ="0dp"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:text="Task Title"
                            android:theme="@style/Theme.TaskText"
                            />
                        <TextView
                            android:id="@+id/assigned_title_text_view"
                            android:layout_height="wrap_content"
                            android:layout_width ="0dp"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:text="Assigned"
                            android:theme="@style/Theme.TaskText"
                            />
                        <TextView
                            android:id="@+id/urgency_title_text_view"
                            android:layout_height="wrap_content"
                            android:layout_width ="0dp"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:text="Urgency"
                            android:theme="@style/Theme.TaskText"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="3dp"
                        android:background="@color/white">
                        <TextView
                            android:id="@+id/task_text_view"
                            android:layout_height="wrap_content"
                            android:layout_width ="0dp"
                            android:layout_weight="1"
                            android:text="Make a Card"
                            android:theme="@style/Theme.TaskText"
                            />
                        <TextView
                            android:id="@+id/assigned_text_view"
                            android:layout_height="wrap_content"
                            android:layout_width ="0dp"
                            android:layout_weight="1"
                            android:text="Cameron R."
                            android:theme="@style/Theme.TaskText"                            />
                        <TextView
                            android:id="@+id/urgency_text_view"
                            android:layout_height="wrap_content"
                            android:layout_width ="0dp"
                            android:layout_weight="1"
                            android:text="5 hours"
                            android:theme="@style/Theme.TaskText"
                            />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
